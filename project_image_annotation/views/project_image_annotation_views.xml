<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para la imagen con anotaciones -->
    <record id="view_project_image_annotation_form" model="ir.ui.view">
        <field name="name">project.image.annotation.form</field>
        <field name="model">project.image.annotation</field>
        <field name="arch" type="xml">
            <form string="Anotación de Imagen">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-tasks" type="object">
                            <field name="annotation_count" string="Anotaciones" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Nombre de la imagen anotada"/>
                            <field name="project_id"/>
                            <field name="task_id" domain="[('project_id', '=', project_id)]"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="image_filename" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Imagen" name="image">
                            <group>
                                <field name="image" widget="image" options="{'size': [0, 0]}"/>
                            </group>
                        </page>
                        
                        <page string="Anotaciones Interactivas" name="interactive_annotations">
                            <field name="image" widget="image_annotation_widget" nolabel="1"/>
                        </page>
                        
                        <page string="Lista de Anotaciones" name="annotations_list">
                            <field name="annotation_ids">
                                <tree editable="bottom" default_order="numero">
                                    <field name="numero"/>
                                    <field name="descripcion"/>
                                    <field name="secuencia"/>
                                    <field name="estado"/>
                                    <field name="responsable_id"/>
                                    <field name="color" widget="color"/>
                                    <field name="pos_x" optional="hide"/>
                                    <field name="pos_y" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para las imágenes anotadas -->
    <record id="view_project_image_annotation_tree" model="ir.ui.view">
        <field name="name">project.image.annotation.tree</field>
        <field name="model">project.image.annotation</field>
        <field name="arch" type="xml">
            <tree string="Imágenes Anotadas">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="annotation_count" string="# Anotaciones"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Vista Kanban para las imágenes -->
    <record id="view_project_image_annotation_kanban" model="ir.ui.view">
        <field name="name">project.image.annotation.kanban</field>
        <field name="model">project.image.annotation</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="image"/>
                <field name="annotation_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('project.image.annotation', 'image', record.id.raw_value)" 
                                     alt="Imagen" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="project_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-map-marker"/> 
                                    <field name="annotation_count"/> anotaciones
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de formulario para puntos de anotación -->
    <record id="view_project_image_annotation_point_form" model="ir.ui.view">
        <field name="name">project.image.annotation.point.form</field>
        <field name="model">project.image.annotation.point</field>
        <field name="arch" type="xml">
            <form string="Punto de Anotación">
                <sheet>
                    <group>
                        <group>
                            <field name="annotation_id"/>
                            <field name="numero"/>
                            <field name="descripcion"/>
                            <field name="secuencia"/>
                        </group>
                        <group>
                            <field name="estado"/>
                            <field name="responsable_id"/>
                            <field name="color" widget="color"/>
                            <field name="fecha_creacion" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="pos_x"/>
                            <field name="pos_y"/>
                        </group>
                        <group>
                            <field name="notas_adicionales"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para puntos de anotación -->
    <record id="view_project_image_annotation_point_tree" model="ir.ui.view">
        <field name="name">project.image.annotation.point.tree</field>
        <field name="model">project.image.annotation.point</field>
        <field name="arch" type="xml">
            <tree string="Puntos de Anotación" default_order="numero">
                <field name="numero"/>
                <field name="descripcion"/>
                <field name="secuencia"/>
                <field name="estado" decoration-success="estado == 'completado'" 
                       decoration-warning="estado == 'en_proceso'" 
                       decoration-danger="estado == 'pendiente'"/>
                <field name="responsable_id"/>
                <field name="annotation_id"/>
                <field name="color" widget="color"/>
            </tree>
        </field>
    </record>

    <!-- Acción para imágenes anotadas -->
    <record id="action_project_image_annotation" model="ir.actions.act_window">
        <field name="name">Imágenes Anotadas</field>
        <field name="res_model">project.image.annotation</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera imagen anotada
            </p>
            <p>
                Sube imágenes y agrega anotaciones interactivas haciendo clic en puntos específicos.
            </p>
        </field>
    </record>

    <!-- Acción para puntos de anotación -->
    <record id="action_project_image_annotation_point" model="ir.actions.act_window">
        <field name="name">Puntos de Anotación</field>
        <field name="res_model">project.image.annotation.point</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_project_image_annotation_root"
              name="Imágenes Anotadas"
              parent="project.menu_main_pm"
              sequence="10"/>

    <menuitem id="menu_project_image_annotation"
              name="Imágenes"
              parent="menu_project_image_annotation_root"
              action="action_project_image_annotation"
              sequence="1"/>

    <menuitem id="menu_project_image_annotation_points"
              name="Puntos de Anotación"
              parent="menu_project_image_annotation_root"
              action="action_project_image_annotation_point"
              sequence="2"/>

</odoo>
