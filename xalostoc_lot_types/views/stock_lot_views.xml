<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.product.lot.form.inherit.xalostoc</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml" >
            <xpath expr="//field[@name='ref']" position="after">
                <field name="additional_lot" string="Lote"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="lot_type_id"/>
                <field name="l10n_mx_edi_customs_number_display"/>
                <field name="l10n_mx_edi_customs_date_display"/>
                <field name="partner_id"/>
                <field name="note"/>
            </xpath>
        </field>
    </record>
</odoo>
