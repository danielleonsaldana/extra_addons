<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_lot_type_tree_view" model="ir.ui.view">
        <field name="name">stock.lot.type.tree.view</field>
        <field name="model">stock.lot.type</field>
        <field name="arch" type="xml">
            <tree string="Lot Types" editable="bottom" sample="1">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="stock_lot_type_tree" model="ir.actions.act_window">
        <field name="name">Stock Lot Type</field>
        <field name="res_model">stock.lot.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new stock lot type
            </p>
        </field>
    </record>
</odoo>
