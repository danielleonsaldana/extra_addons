<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Lista -->
    <record id="view_package_product_tree" model="ir.ui.view">
        <field name="name">package.product.tree</field>
        <field name="model">package.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="xas_code"/>
                <field name="xas_is_invailable"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_package_product_form" model="ir.ui.view">
        <field name="name">package.product.form</field>
        <field name="model">package.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="xas_code"/>
                        <field name="xas_is_invailable"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_package_product" model="ir.actions.act_window">
        <field name="name">Empaques</field>
        <field name="res_model">package.product</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_package_product_tree"/>
        <field name="help" type="html">
            <p>
                Crea y gestiona los empaques de productos.
            </p>
        </field>
    </record>
</odoo>