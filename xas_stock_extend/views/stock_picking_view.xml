<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_xas_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.xas.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="pos_order_currency_id" invisible="1"/>
                    <field name="xas_pos_order_amount_total" widget="monetary" options="{'currency_field': 'pos_order_currency_id'}" invisible="not xas_pos_order_amount_total"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>