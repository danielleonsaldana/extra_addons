<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Lista (Tree View) -->
    <record id="view_scientific_variety_product_tree" model="ir.ui.view">
        <field name="name">scientific.variety.product.tree</field>
        <field name="model">scientific.variety.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="xas_code"/>
                <field name="xas_is_invailable"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario (Form View) -->
    <record id="view_scientific_variety_product_form" model="ir.ui.view">
        <field name="name">scientific.variety.product.form</field>
        <field name="model">scientific.variety.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="xas_code"/>
                        <field name="xas_is_invailable"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_scientific_variety_product" model="ir.actions.act_window">
        <field name="name">Variedades Científicas</field>
        <field name="res_model">scientific.variety.product</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_scientific_variety_product_tree"/>
        <field name="help" type="html">
            <p>
                Crea y gestiona las variedades científicas de productos.
            </p>
        </field>
    </record>
</odoo>