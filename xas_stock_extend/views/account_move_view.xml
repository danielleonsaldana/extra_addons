<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Heredamos la vista de líneas de factura para agregar el campo de lote -->
    <record id="view_move_form_inherit_xas_pos_extend" model="ir.ui.view">
        <field name="name">account.move.form.inherit.xas_pos_extend</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Agregamos el campo en las líneas de factura -->
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='product_id']" position="after">
                <field name="xas_stock_lot_id" optional="show"/>
            </xpath>

        </field>
    </record>

</odoo>