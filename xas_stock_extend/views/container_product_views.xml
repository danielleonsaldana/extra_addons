<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Lista -->
    <record id="view_container_product_tree" model="ir.ui.view">
        <field name="name">container.product.tree</field>
        <field name="model">container.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="xas_code"/>
                <field name="xas_is_invailable"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_container_product_form" model="ir.ui.view">
        <field name="name">container.product.form</field>
        <field name="model">container.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="xas_code"/>
                        <field name="xas_is_invailable"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_container_product" model="ir.actions.act_window">
        <field name="name">Envases</field>
        <field name="res_model">container.product</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_container_product_tree"/>
        <field name="help" type="html">
            <p>
                Crea y gestiona los envases de productos.
            </p>
        </field>
    </record>
</odoo>