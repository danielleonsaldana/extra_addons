<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Lista -->
    <record id="view_weight_mla_tree" model="ir.ui.view">
        <field name="name">weight.mla.tree</field>
        <field name="model">weight.mla</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="xas_code"/>
                <field name="xas_is_invailable"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_weight_mla_form" model="ir.ui.view">
        <field name="name">weight.mla.form</field>
        <field name="model">weight.mla</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="xas_code"/>
                        <field name="xas_is_invailable"/>
                        <field name="xas_qty"/>
                        <field name="xas_uom_qty"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_weight_mla" model="ir.actions.act_window">
        <field name="name">Peso</field>
        <field name="res_model">weight.mla</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_weight_mla_tree"/>
        <field name="help" type="html">
            <p>
                Crea y gestiona los pesos de productos.
            </p>
        </field>
    </record>
</odoo>