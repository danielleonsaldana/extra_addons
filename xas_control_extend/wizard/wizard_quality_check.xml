<odoo>
    <record id="view_wizard_quality_check_form" model="ir.ui.view">
        <field name="name">wizard.quality.check.form</field>
        <field name="model">wizard.quality.check</field>
        <field name="arch" type="xml">
            <form string="Wizard para Quality Check">
                <sheet>
                    <header>
                        <field name="xas_status" widget="statusbar" options="{'clickable': False}" />
                    </header>
                    <notebook>
                        <!-- Primera pestaña -->
                        <page string="Datos generales">
                            <field name="xas_line_ids">
                                <tree editable="bottom">
                                    <field name="xas_promedio" />
                                </tree>
                            </field>
                        </page>
                        <page string="Pudrición">
                            <field name="xas_notes_decay" widget="text" placeholder="Escribe tus notas aquí..."/>
                        </page>
                        <page string="Piel suelta">
                            <field name="xas_notes_loose" widget="text" placeholder="Escribe tus notas aquí..."/>
                        </page>
                        <page string="° Brix">
                            <field name="xas_notes_brix" widget="text" placeholder="Escribe tus notas aquí..."/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Guardar" type="object" name="xas_save_data" class="btn-primary"/>
                    <button string="Cancelar" type="object" name="xas_action_cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_wizard_quality_check" model="ir.actions.act_window">
        <field name="name">Inspección</field>
        <field name="res_model">wizard.quality.check</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
