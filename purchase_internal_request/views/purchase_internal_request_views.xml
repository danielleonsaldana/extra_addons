<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista Tree para Líneas de Solicitud -->
        <record id="view_purchase_internal_request_line_tree" model="ir.ui.view">
            <field name="name">purchase.internal.request.line.tree</field>
            <field name="model">purchase.internal.request.line</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="product_id" optional="show"/>
                    <field name="description"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                    <field name="notes" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario -->
        <record id="view_purchase_internal_request_form" model="ir.ui.view">
            <field name="name">purchase.internal.request.form</field>
            <field name="model">purchase.internal.request</field>
            <field name="arch" type="xml">
                <form string="Solicitud de Compra Interna">
                    <header>
                        <button name="action_submit" string="Enviar" type="object" class="btn btn-primary"/>
                        <button name="action_assign_manager" string="Asignar Gestor" type="object" class="btn btn-outline-primary" groups="purchase_internal_request.group_purchase_request_manager"/>
                        <button name="action_create_rfq" string="Crear RFQ" type="object" class="btn btn-success" groups="purchase_internal_request.group_purchase_request_manager"/>
                        <button name="action_send_to_requester" string="Enviar a Solicitante" type="object" class="btn btn-secondary" groups="purchase_internal_request.group_purchase_request_manager"/>
                        <button name="action_select_rfq" string="Seleccionar Cotización" type="object" class="btn btn-outline-success"/>
                        <button name="action_request_new_quotes" string="Solicitar Nuevas Cotizaciones" type="object" class="btn btn-outline-warning"/>
                        <button name="action_approve_level_1" string="Aprobar (Nivel 1)" type="object" class="btn btn-primary" groups="purchase_internal_request.group_purchase_request_approver"/>
                        <button name="action_approve_level_2" string="Aprobar (Nivel 2)" type="object" class="btn btn-primary" groups="purchase_internal_request.group_purchase_request_approver"/>
                        <button name="action_reject" string="Rechazar" type="object" class="btn btn-outline-danger" groups="purchase_internal_request.group_purchase_request_approver"/>
                        <button name="action_confirm_purchase" string="Confirmar Compra" type="object" class="btn btn-success" groups="purchase_internal_request.group_purchase_request_manager"/>
                        <button name="action_cancel" string="Cancelar" type="object" class="btn btn-outline-secondary"/>
                        <button name="action_reset_to_draft" string="Reiniciar a Borrador" type="object" class="btn btn-outline-primary" groups="purchase_internal_request.group_purchase_request_manager"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,submitted,in_progress,quotation_review,pending_approval,approved,done"/>
                    </header>

                    <sheet>
                        
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_rfqs" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-file-text-o"
                                    invisible="rfq_count == 0">
                                <field name="rfq_count" widget="statbutton" string="RFQs"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                                <field name="date_request"/>
                                <field name="analytic_account_id"/>
                            </group>
                            <group>
                                <field name="purchase_manager_id" groups="purchase_internal_request.group_purchase_request_manager"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Productos / Servicios">
                                <field name="line_ids"/>
                            </page>

                            <page string="Cotizaciones">
                                <group>
                                    <group>
                                        <field name="selected_rfq_id" domain="[('internal_request_id', '=', id), ('state', 'in', ['draft', 'sent'])]" options="{'no_create': True}"/>
                                        <field name="selected_rfq_amount"/>
                                        <field name="currency_id"/>
                                    </group>
                                    <group>
                                        <field name="selected_rfq_amount_usd"/>
                                        <field name="approval_level"/>
                                    </group>
                                </group>

                                <field name="rfq_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="date_order"/>
                                        <field name="amount_total" sum="Total"/>
                                        <field name="currency_id"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Aprobaciones">
                                <group>
                                    <group string="Aprobador 1">
                                        <field name="approver_1_id"/>
                                        <field name="approver_1_status"/>
                                        <field name="approver_1_date"/>
                                    </group>
                                    <group string="Aprobador 2">
                                        <field name="approver_2_id"/>
                                        <field name="approver_2_status"/>
                                        <field name="approver_2_date"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="rejection_reason"/>
                                </group>
                            </page>

                            <page string="Orden de Compra">
                                <group>
                                    <field name="final_purchase_order_id"/>
                                </group>
                            </page>

                            <page string="Descripción">
                                <field name="description" placeholder="Descripción adicional de la solicitud..."/>
                            </page>
                        </notebook>
                    </sheet>

                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Vista de Árbol -->
        <record id="view_purchase_internal_request_tree" model="ir.ui.view">
            <field name="name">purchase.internal.request.tree</field>
            <field name="model">purchase.internal.request</field>
            <field name="arch" type="xml">
                <list string="Solicitudes de Compra Internas" 
                      decoration-info="state == 'draft'" 
                      decoration-muted="state == 'cancelled'"
                      decoration-success="state == 'approved'"
                      decoration-danger="state == 'rejected'">
                    <field name="name"/>
                    <field name="date_request"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="purchase_manager_id"/>
                    <field name="selected_rfq_amount" sum="Total" optional="hide"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state" widget="badge" 
                           decoration-info="state in ['draft', 'submitted']"
                           decoration-warning="state in ['in_progress', 'quotation_review', 'pending_approval']"
                           decoration-success="state in ['approved', 'done']"
                           decoration-danger="state == 'rejected'"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Acción Principal -->
        <record id="action_purchase_internal_request" model="ir.actions.act_window">
            <field name="name">Solicitudes de Compra Internas</field>
            <field name="res_model">purchase.internal.request</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'search_default_my_requests': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva solicitud de compra interna
                </p>
                <p>
                    Las solicitudes de compra permiten a los empleados solicitar productos o servicios
                    que luego serán gestionados por el equipo de compras.
                </p>
            </field>
        </record>

    </data>
</odoo>
