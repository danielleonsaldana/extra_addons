        <!-- Vista Kanban -->
        <record id="view_purchase_internal_request_kanban" model="ir.ui.view">
            <field name="name">purchase.internal.request.kanban</field>
            <field name="model">purchase.internal.request</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="date_request"/>
                    <field name="state"/>
                    <field name="purchase_manager_id"/>
                    <field name="selected_rfq_amount"/>
                    <field name="currency_id"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge badge-pill">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="employee_id"/>
                                    <br/>
                                    <t t-if="record.purchase_manager_id.value">
                                        Gestor: <field name="purchase_manager_id"/>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="date_request" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.selected_rfq_amount.value">
                                            <field name="selected_rfq_amount" widget="monetary"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Acción Principal -->
        <record id="action_purchase_internal_request" model="ir.actions.act_window">
            <field name="name">Solicitudes de Compra Internas</field>
            <field name="res_model">purchase.internal.request</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'search_default_my_requests': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva solicitud de compra interna
                </p>
                <p>
                    Las solicitudes de compra permiten a los empleados solicitar productos o servicios
                    que luego serán gestionados por el equipo de compras.
                </p>
            </field>
        </record>

    </data>
</odoo>
