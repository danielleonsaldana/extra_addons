<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista Tree para Líneas de Solicitud -->
        <record id="view_purchase_internal_request_line_tree" model="ir.ui.view">
            <field name="name">purchase.internal.request.line.tree</field>
            <field name="model">purchase.internal.request.line</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="product_id" optional="show"/>
                    <field name="description"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                    <field name="notes" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario -->
        <record id="view_purchase_internal_request_form" model="ir.ui.view">
            <field name="name">purchase.internal.request.form</field>
            <field name="model">purchase.internal.request</field>
            <field name="arch" type="xml">
                <form string="Solicitud de Compra Interna">
                    <header>
                        <!-- Botones según estado -->
                        <button name="action_submit" 
                                string="Enviar" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'draft'"/>
                        
                        <button name="action_assign_manager" 
                                string="Asignar Gestor" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'submitted'"
                                groups="purchase_internal_request.group_purchase_request_manager"/>
                        
                        <button name="action_create_rfq" 
                                string="Crear RFQ" 
                                type="object" 
                                class="btn-primary"
                                invisible="state not in ['in_progress', 'quotation_review']"
                                groups="purchase_internal_request.group_purchase_request_manager"/>
                        
                        <button name="action_send_to_requester" 
                                string="Enviar a Solicitante" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'in_progress'"
                                groups="purchase_internal_request.group_purchase_request_manager"/>
                        
                        <button name="action_select_rfq" 
                                string="Seleccionar Cotización" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'quotation_review' or not selected_rfq_id"/>
                        
                        <button name="action_request_new_quotes" 
                                string="Solicitar Nuevas Cotizaciones" 
                                type="object" 
                                invisible="state != 'quotation_review'"/>
                        
                        <button name="action_approve_level_1" 
                                string="Aprobar (Nivel 1)" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'pending_approval' or approver_1_status != 'pending'"
                                groups="purchase_internal_request.group_purchase_request_approver"/>
                        
                        <button name="action_approve_level_2" 
                                string="Aprobar (Nivel 2)" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'pending_approval' or approver_2_status != 'pending' or not approver_2_id"
                                groups="purchase_internal_request.group_purchase_request_approver"/>
                        
                        <button name="action_reject" 
                                string="Rechazar" 
                                type="object" 
                                invisible="state != 'pending_approval'"
                                groups="purchase_internal_request.group_purchase_request_approver"/>
                        
                        <button name="action_confirm_purchase" 
                                string="Confirmar Compra" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'approved'"
                                groups="purchase_internal_request.group_purchase_request_manager"/>
                        
                        <button name="action_cancel" 
                                string="Cancelar" 
                                type="object" 
                                invisible="state in ['done', 'cancelled']"/>
                        
                        <button name="action_reset_to_draft" 
                                string="Reiniciar a Borrador" 
                                type="object" 
                                invisible="state not in ['cancelled', 'rejected']"
                                groups="purchase_internal_request.group_purchase_request_manager"/>
                        
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,submitted,in_progress,quotation_review,pending_approval,approved,done"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_rfqs" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-file-text-o"
                                    invisible="rfq_count == 0">
                                <field name="rfq_count" widget="statbutton" string="RFQs"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="employee_id" readonly="state != 'draft'"/>
                                <field name="department_id"/>
                                <field name="date_request" readonly="state != 'draft'"/>
                                <field name="analytic_account_id" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="purchase_manager_id" 
                                       readonly="state not in ['submitted', 'in_progress']"
                                       groups="purchase_internal_request.group_purchase_request_manager"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Productos/Servicios" name="lines">
                                <field name="line_ids" readonly="state not in ['draft', 'submitted']"/>
                            </page>
                            
                            <page string="Cotizaciones" name="quotations" 
                                  invisible="state in ['draft', 'submitted']">
                                <group>
                                    <group>
                                        <field name="selected_rfq_id" 
                                               domain="[('internal_request_id', '=', id), ('state', 'in', ['draft', 'sent'])]"
                                               readonly="state not in ['quotation_review']"
                                               options="{'no_create': True}"/>
                                        <field name="selected_rfq_amount" 
                                               invisible="not selected_rfq_id"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="selected_rfq_amount_usd" 
                                               invisible="not selected_rfq_id"/>
                                        <field name="approval_level" 
                                               invisible="not selected_rfq_id"/>
                                    </group>
                                </group>
                                
                                <field name="rfq_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="date_order"/>
                                        <field name="amount_total" sum="Total"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="state"/>
                                        <field name="is_selected_rfq" invisible="1"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Aprobaciones" name="approvals" 
                                  invisible="state not in ['pending_approval', 'approved', 'rejected', 'done']">
                                <group>
                                    <group string="Aprobador 1">
                                        <field name="approver_1_id" readonly="1"/>
                                        <field name="approver_1_status"/>
                                        <field name="approver_1_date" readonly="1"/>
                                    </group>
                                    <group string="Aprobador 2" invisible="not approver_2_id">
                                        <field name="approver_2_id" readonly="1"/>
                                        <field name="approver_2_status"/>
                                        <field name="approver_2_date" readonly="1"/>
                                    </group>
                                </group>
                                
                                <group invisible="state != 'rejected'">
                                    <field name="rejection_reason" readonly="1"/>
                                </group>
                            </page>
                            
                            <page string="Orden de Compra" name="purchase_order" 
                                  invisible="not final_purchase_order_id">
                                <group>
                                    <field name="final_purchase_order_id" readonly="1"/>
                                </group>
                            </page>
                            
                            <page string="Descripción" name="description">
                                <field name="description" placeholder="Descripción adicional de la solicitud..." 
                                       readonly="state not in ['draft', 'submitted']"/>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista de Árbol -->
        <record id="view_purchase_internal_request_tree" model="ir.ui.view">
            <field name="name">purchase.internal.request.tree</field>
            <field name="model">purchase.internal.request</field>
            <field name="arch" type="xml">
                <list string="Solicitudes de Compra Internas" 
                      decoration-info="state == 'draft'" 
                      decoration-muted="state == 'cancelled'"
                      decoration-success="state == 'approved'"
                      decoration-danger="state == 'rejected'">
                    <field name="name"/>
                    <field name="date_request"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="purchase_manager_id"/>
                    <field name="selected_rfq_amount" sum="Total" optional="hide"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state" widget="badge" 
                           decoration-info="state in ['draft', 'submitted']"
                           decoration-warning="state in ['in_progress', 'quotation_review', 'pending_approval']"
                           decoration-success="state in ['approved', 'done']"
                           decoration-danger="state == 'rejected'"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

