<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Heredar vista de formulario de Purchase Order -->
        <record id="view_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar botón crear SCI -->
                <xpath expr="//button[@name='button_confirm']" position="before">
                    <button name="action_create_internal_request" 
                            string="Crear Solicitud Interna" 
                            type="object" 
                            invisible="state != 'draft'"/>
                </xpath>
                
                <!-- Agregar campo de solicitud interna después del origen -->
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="internal_request_id" readonly="1"/>
                    <field name="is_selected_rfq" invisible="1"/>
                </xpath>
                
                <!-- Agregar botón para ver la solicitud interna -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_internal_request" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-file-text"
                            invisible="not internal_request_id"
                            string="Solicitud Interna">
                    </button>
                </xpath>

            </field>
        </record>

        <!-- Heredar vista de árbol de Purchase Order -->
        <record id="view_purchase_order_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="internal_request_id" optional="hide"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
