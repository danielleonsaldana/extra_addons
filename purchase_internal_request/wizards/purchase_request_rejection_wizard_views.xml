<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_request_rejection_wizard_form" model="ir.ui.view">
            <field name="name">purchase.request.rejection.wizard.form</field>
            <field name="model">purchase.request.rejection.wizard</field>
            <field name="arch" type="xml">
                <form string="Rechazar Solicitud">
                    <group>
                        <field name="request_id" invisible="1"/>
                        <field name="rejection_reason" placeholder="Proporcione el motivo del rechazo..."/>
                    </group>
                    <footer>
                        <button string="Rechazar" name="action_reject" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
