<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="0">

        <!-- Heredando vista form de picking -->
        <record id="view_picking_form_inh" model="ir.ui.view">
            <field name="name">view_picking_form_inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <field name="xas_is_in_distribution_group" invisible="1"/>
                    <field name="xas_purchase_id" invisible="1"/>
                    <field name="xas_current_company" invisible="1"/>
                    <field name="xas_company_type" invisible="1"/>
                    <field name="xas_company_distributed" invisible="1"/>
                    <field name="xas_auto_sale_order_id" invisible="1"/>
                    <button name="action_distribution_wizard" invisible="(xas_is_in_distribution_group == False or xas_purchase_id == False or xas_company_type != 'importing' or xas_auto_sale_order_id != False) or (state in ['done','cancel'] and xas_company_distributed != xas_current_company)" string="Generar distribución" type="object" class="oe_highlight" data-hotkey="d"/>
                </xpath>

                <!-- Condicionales del boton de distribución -->
                <xpath expr="//group//group[2]" position="after">
                    <group string="Condicionales del botón" invisible="1">
                        <field name="xas_is_in_distribution_group" />
                        <field name="xas_purchase_id" />
                        <field name="xas_current_company" />
                        <field name="xas_company_type" />
                        <field name="xas_company_distributed" />
                        <field name="xas_auto_sale_order_id" />
                    </group>
                </xpath>

                <xpath expr="//group//group" position="inside">
                    <field name="xas_distributed" widget="boolean_toggle" readonly="1" force_save="1"/>
                </xpath>

                <xpath expr="//tree//field[@name='quantity']" position="after">
                    <field name="xas_real_box"/>
                    <field name="xas_pos_price_unit"/>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page string="Ventas generadas" invisible="xas_sale_ids == False or xas_is_in_distribution_group == False">
                         <field name="xas_sale_ids" readonly="1" force_save="1"/>
                    </page>
                </xpath>

                <!-- Agregamos las cajas totales -->
                <xpath expr="//page[@name='operations']/field[@name='id']" position="after">
                    <group>
                        <group>
                            <!-- <field colspan="2" name="note" nolabel="1" placeholder="Define tus notas aqui"/> -->
                        </group>
                        <group class="oe_subtotal_footer">
                            <field name="total_boxes" string="Cajas Totales"/>
                        </group>
                    </group>
                    <div class="clearfix"/>
                </xpath>

                <!-- Agregamos condicionales a las cantidades y cajas reales -->
                <!-- Agregar campos en las líneas de movimiento -->
                <xpath expr="//field[@name='name']" position="before">
                    <field name="show_demand_fields" invisible="1"/>
                    <field name="show_qty_fields" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']" position="attributes">
                    <attribute name="column_invisible">parent.show_demand_fields == False</attribute>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity']" position="attributes">
                    <attribute name="column_invisible">parent.show_qty_fields == False</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>