<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="0">

        <!-- Formulario de compaÃ±ia -->
        <record id="view_company_form_inherit" model="ir.ui.view">
            <field name="name">view_company_form_inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//group[1]/group[1]" position="inside"> -->
                <xpath expr="//h1" position="after">
                    <group>
                        <field name="xas_company_type" widget="radio" options="{'horizontal': True}"/>
                        <field name="xas_company_code"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Formulario de compaÃ±ia (pagina 'transacciones dentro de la empresa') -->
        <record id="view_company_inter_change_inherit_form_inherit" model="ir.ui.view">
            <field name="name">view_company_inter_change_inherit_form_inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="account_inter_company_rules.view_company_inter_change_inherit_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//group[1]/group[1]" position="inside"> -->
                <xpath expr="//group[1]/group[2]/div" position="after">
                    <field name="xas_profit"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>