<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ProductInfoPopup" t-inherit-mode="extension">

        <!-- Eliminamos elementos que solo hacen ruido -->
        <xpath expr="//div[contains(@class, 'd-flex flex-column justify-content-center')
                            and contains(@class, 'text-sm-end')
                            and contains(@class, 'w-sm-25')]"
            position="replace">
        </xpath>
        <xpath expr="//div[contains(@class, 'section-financials')]" position="replace">
        </xpath>
        <xpath expr="//div[contains(@class, 'section-supplier')]" position="replace">
        </xpath>

        <!-- Insertamos el bloque precios de mla antes de la sección "Order" -->
        <xpath expr="//div[@class='section-order mt-3 mb-4 pb-4 border-bottom text-start']"
               position="before">
            <div class="section-mla-pricelist mt-3 mb-4 pb-4 border-bottom text-start"
                 t-if="mlaPricelistData and mlaPricelistData.length">
                <h3 class="section-title">Lista de Precios MLA</h3>
                <table class="mt-3">
                    <thead class="table-header-pricelist-popup">
                        <tr>
                            <th>Fecha de recepción</th>
                            <th>Código de embarque</th>
                            <th>Segmentador</th>
                            <th>Cantidad disponible</th>
                            <th>Cantidad reservada</th>
                            <th>Precio menudeo</th>
                            <th>Precio mayoreo</th>
                            <th>Cajas por pallet</th>
                            <th>Precio por pallet</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="mlaPricelistData" t-as="mla" t-key="mla.xas_mla_id">
                            <t t-if="mla.xas_available_qty &gt; 0 and mla.xas_mayority_price &gt; 0">
                                <td t-esc="mla.xas_reception_date"/>
                                <td t-esc="mla.xas_trip_number_name"/>
                                <td t-if="mla.xas_stock_lot_name" t-esc="mla.xas_stock_lot_name"/>
                                <td t-esc="mla.xas_available_qty"/>
                                <td t-esc="mla.xas_reserved_qty"/>
                                <td t-esc="mla.xas_price_per_box"/>
                                <td t-esc="mla.xas_mayority_price"/>
                                <td t-esc="mla.xas_boxes_by_pallet"/>
                                <td t-esc="mla.xas_price_per_pallet"/>
                            </t>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </t>
</templates>