<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="0">
        <!-- Grupo de edición de prefijo en los partners -->
        <record id="group_prefix_partner" model="res.groups">
            <field name="name">Editar prefijo en el partner</field>
            <field name="comment">Permite la edición del prefijo en el partner</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Grupo de edición de tipo de cambio de protección -->
        <record id="group_xas_user_edit_protection_exchange_rate" model="res.groups">
            <field name="name">Editar tipo de cambio de protección</field>
            <field name="comment">Permite la edición del tipo de cambio de protección</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Grupo que permite la edicion del campo de documentos completos -->
        <record id="group_xas_user_documents_confirmation" model="res.groups">
            <field name="name">documents_confirmation</field>
            <field name="comment">Permite activar/desactivar el checkbox de documentos completos</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Grupo que permite borrar registros de tracking -->
        <record id="group_tracking_manager" model="res.groups">
            <field name="name">Permitir borrar registros de seguimiento</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Reglas de acceso -->
        <record id="xas_tracking_delete_restricted" model="ir.rule">
            <field name="name">Restricción de eliminación para seguimientos</field>
            <field name="model_id" ref="model_tracking"/>
            <field name="domain_force">[(1, '=', 1)]</field> <!-- Aplica a todos los registros -->
            <field name="groups" eval="[(4, ref('group_tracking_manager'))]"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>