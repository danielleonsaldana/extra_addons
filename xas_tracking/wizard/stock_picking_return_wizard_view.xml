<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_return_picking_form_inh" model="ir.ui.view">
        <field name="name">view_stock_return_picking_form_inh</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="xas_tracking_id"/>
                <field name="xas_trip_number_id"/>
            </field>
        </field>
    </record>

    <!-- Asistente de scrap desde fabricación -->
    <record id="view_stock_scrap_form_inherit" model="ir.ui.view">
        <field name="name">stock.scrap.form.inherit</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view2"/>
        <field name="arch" type="xml">
            <!-- Busca el campo 'production_id' y añade los nuevos campos después de él -->
            <xpath expr="//field[@name='production_id']" position="after">
                <field name="xas_tracking_id"/>
                <field name="xas_trip_number_id"/>
            </xpath>
        </field>
    </record>

</odoo>