<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista del wizard -->
    <record id="view_tracking_invoice_wizard" model="ir.ui.view">
        <field name="name">view_tracking_invoice_wizard</field>
        <field name="model">tracking.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Asistente de generación de facturas">
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del wizard -->
    <record id="action_tracking_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Generar facturas</field>
        <field name="res_model">tracking.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_tracking_invoice_wizard"/>
        <field name="target">new</field>
    </record>

</odoo>