<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="0">

        <!-- Configuraciones -->
        <record id="view_res_config_settings_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.protection.exchange.rate</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Tracking" string="Seguimientos" name="xas_tracking">
                        <block title="Cambio de protección" id="exchange">
                            <setting id="setting_protection_rate" class="w-100" string="Tipo de cambio de protección" help="Esta configuración permite agregar tipos de cambio de protección" groups="xas_tracking.group_xas_user_edit_protection_exchange_rate">
                                <field name="xas_protection_exchange_rate_ids" class="w-100">
                                    <tree editable="top" create="true" edit="true" delete="true">
                                        <field name="xas_date"/>
                                        <field name="xas_rate"/>
                                    </tree>
                                </field>
                            </setting>
                        </block>
                        
                        <block title="Configuración de Cálculos DTA y PREV" id="dta_prev_config">
                            <setting id="setting_dta_percentage" string="Porcentaje DTA" help="Porcentaje para calcular el DTA (Derechos de Trámite Aduanero)">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="xas_dta_percentage" class="col-lg-3 o_light_label"/>
                                        <field name="xas_dta_percentage" class="oe_inline"/>
                                        <span class="o_form_label oe_inline ms-1">%</span>
                                    </div>
                                </div>
                            </setting>
                            
                            <setting id="setting_prev_amount" string="Monto Fijo PREV" help="Monto fijo para calcular el PREV (Previo)">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="xas_prev_fixed_amount" class="col-lg-3 o_light_label"/>
                                        <field name="xas_prev_fixed_amount" class="oe_inline"/>
                                        <span class="o_form_label oe_inline ms-1">MXN</span>
                                    </div>
                                </div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

    </data>
</odoo>