<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Categoría de permisos para Límite de carga -->
    <record id="module_category_credit_limit" model="ir.module.category">
        <field name="name">Límite de carga</field>
        <field name="description">Gestiona los permisos para el límite de carga de créditos</field>
        <field name="sequence">20</field>
        <field name="parent_id" ref="base.module_category_accounting"/>
    </record>

    <!-- Grupo de Usuario para límite de carga -->
    <record id="group_credit_limit_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="module_category_credit_limit"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Grupo de Aprobador para límite de carga -->
    <record id="group_credit_limit_approver" model="res.groups">
        <field name="name">Aprobador</field>
        <field name="category_id" ref="module_category_credit_limit"/>
        <field name="implied_ids" eval="[(4, ref('group_credit_limit_user'))]"/>
    </record>

</odoo>